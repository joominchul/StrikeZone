<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 첫 번째 선 (45도 회전) -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="5dp"
                    android:color="@color/transparentWhite" />
            </shape>
        </rotate>
    </item>
    <!-- 두 번째 선 (-45도 회전) -->
    <item>
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="5dp"
                    android:color="@color/transparentWhite" />
            </shape>
        </rotate>
    </item>
</layer-list>